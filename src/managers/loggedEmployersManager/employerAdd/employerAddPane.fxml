<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@../../../resources/stylesheets/login.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="managers.loggedEmployersManager.employerAdd.EmployerAddController">
   <children>
      <VBox layoutY="50.0" prefHeight="287.0" prefWidth="600.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Company name:">
                     <HBox.margin>
                        <Insets bottom="8.0" right="15.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="txtName" prefHeight="31.0" prefWidth="182.0" promptText="company name">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone number:">
                     <HBox.margin>
                        <Insets bottom="8.0" left="15.0" right="15.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="txtNumber" prefHeight="31.0" prefWidth="115.0" promptText="phone number" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail:">
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="txtMail" prefHeight="31.0" prefWidth="174.0" promptText="name@mail.com">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Identification number:">
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="txtIDNumber" prefHeight="31.0" prefWidth="115.0" promptText="id number">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Country:">
                     <HBox.margin>
                        <Insets left="30.0" right="10.0" top="4.0" />
                     </HBox.margin>
                  </Text>
                  <ChoiceBox fx:id="choiceCountry" prefWidth="150.0" />
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onAdd" text="Add employer">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <Button layoutX="515.0" layoutY="355.0" mnemonicParsing="false" onAction="#onReturn" prefHeight="30.0" prefWidth="70.0" text="Return" />
      <Text fx:id="txtMessage" fill="RED" layoutX="289.0" layoutY="375.0" strokeType="OUTSIDE" strokeWidth="0.0" />
   </children>
</AnchorPane>
